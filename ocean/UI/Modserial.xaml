<Page x:Class="ocean.UI.Modserial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ocean.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Modserial">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="122"  MinWidth="122" MaxWidth="200"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="90*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="26*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <Button  Content="添加条目"  Grid.Row="1" Grid.ColumnSpan="2" Click="ButtonAdd_Click"  />
            <Button  Content="删除条目" Grid.Row="2" Grid.ColumnSpan="2" Click="ButtonDelete_Click"></Button>
            <Grid Name="Setadd" Grid.Row="6" Grid.ColumnSpan="2" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <TextBox Text="参数名" Grid.Row="0"></TextBox>
                <TextBox Text="数值" Grid.Row="0" Grid.Column="1"></TextBox>
                <TextBox Text="数据条数" Grid.Row="1"></TextBox>
                <TextBox Text="1" Grid.Row="1" Grid.Column="1"></TextBox>
                <TextBox Text="类型" Grid.Row="2"></TextBox>
                <ComboBox Name="cbProcho" FontSize="10" Grid.Row="2" Grid.Column="1"  Margin="0,1,0,1" Grid.ColumnSpan="2" SelectionChanged="cbProcho_SelectionChanged">
                    <ComboBoxItem >线圈状态(RW)</ComboBoxItem>
                    <ComboBoxItem >离散输入(RO)</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">保持寄存器(RW)</ComboBoxItem>
                    <ComboBoxItem >输入寄存器(RO)</ComboBoxItem>
                </ComboBox>
                <TextBox Text="起始地址" Grid.Row="3"></TextBox>
                <TextBox Text="{Binding mcom.sadd, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"></TextBox>
                <Button Content="确定" Grid.Row="5" Grid.Column="0" Click="setsure_click" ></Button>
                <Button Content="取消" Grid.Row="5" Grid.Column="1" Click="setcancel_click" ></Button>
            </Grid>
        </Grid>

        <Grid  Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <TabControl>
                <DataGrid x:Name="dataGrodx" 
                                ItemsSource="{Binding mcom.dtm, Mode=TwoWay}">
                </DataGrid>
            </TabControl>
        </Grid>
    </Grid>
</Page>
