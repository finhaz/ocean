<Page x:Class="ocean.UI.MCcontrolpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ocean.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MCcontrolpage" Unloaded="Page_Unloaded" Loaded="Page_Loaded"
      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="218*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2" Grid.ColumnSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="122"  MinWidth="122" MaxWidth="200"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="90*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="26*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="100*"/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Name="textBox1" 
                    Text="系统停止运行" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" 
                    Grid.ColumnSpan="2" 
                    Margin="25,0,0,0" />
                <Label 
                    Content="地址："
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="25,0,0,0">
                    
                </Label>
                <TextBox 
                    HorizontalAlignment="Right" 
                    Name="runAddr"  
                    Grid.Row="1"  
                    Grid.ColumnSpan="2" 
                    Text="{Binding McController.RaddText, Mode=TwoWay}"></TextBox>
                <Button 
                    Name="btRUN" 
                    Content="运行" 
                    Grid.Row="2" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Click="btRUN_Click" 
                    Width="80"/>
                <Button 
                    Name="btSTOP" 
                    Content="停止" 
                    Grid.Row="3" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Click="btSTOP_Click" 
                    Width="80"/>
                <Button 
                    Name="btShow" 
                    Content="{Binding McController.BshowContent, Mode=TwoWay}" 
                    Grid.Row="4" 
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Width="80" 
                    Command="{Binding McController.ButtonIncrease}"/>
                <TextBlock 
                    Text="通讯协议选择" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" 
                    Grid.Row="5" 
                    Grid.ColumnSpan="2" 
                    Margin="25,0,0,0" />
                <ComboBox 
                    Name="cbProcho" 
                    FontSize="10" 
                    Grid.Row="6" 
                    Margin="0,1,0,1" 
                    Grid.ColumnSpan="2" 
                    ItemsSource="{Binding ModbusSet.ProOptions}"
                    SelectedItem="{Binding McController.ProtocolNum, Mode=TwoWay}" SelectionChanged="cbProcho_SelectionChanged" />
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>
                <TabControl>
                    <TabItem Header="运行参数" >
                        <DataGrid x:Name="datashow" 
                                  CellEditEnding="datashow_CellEditEnding" 
                                  BeginningEdit="datashow_BeginningEdit"
                                  ItemsSource="{Binding McController.dtrun, Mode=TwoWay}">

                        </DataGrid>
                    </TabItem>

                    <TabItem Header="调试参数">
                        <DataGrid x:Name="dataset"
                                  CellEditEnding="dataset_CellEditEnding"
                                  ItemsSource="{Binding McController.dtset,Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="设定 "  Tag="{Binding id}"  Click="MButton2_Click" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="修正系数">
                        <DataGrid x:Name="datafactor"
                                  CellEditEnding="datafactor_CellEditEnding"
                                  ItemsSource="{Binding McController.dtfactor,Mode=TwoWay}">

                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="设定 "  Tag="{Binding id}" Click="MButton3_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                        </DataGrid>
                    </TabItem>
                </TabControl>

                <TextBox 
                    TextWrapping="Wrap" 
                    Name="ShowTextBox"  
                    Grid.Row="2" 
                    Margin="3,0,0,0" 
                    AcceptsReturn="True" 
                    Grid.RowSpan="2" 
                    Text="{Binding McController.SerialTextBlock.Text,Mode=TwoWay}"></TextBox>

            </Grid>

        </Grid>


    </Grid>
</Page>
