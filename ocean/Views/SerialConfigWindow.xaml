<Window x:Class="ocean.Views.SerialConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ocean.Views"
        mc:Ignorable="d"
        Title="SerialConfigWindow" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">串口号：</TextBlock>
        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding PortConfig.PortNames}" SelectedItem="{Binding PortConfig.SelectedPortName}" Margin="0,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">波特率：</TextBlock>
        <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding PortConfig.BaudRates}" SelectedItem="{Binding PortConfig.SelectedBaudRate}" Margin="0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">数据位：</TextBlock>
        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding PortConfig.DataBits}" SelectedItem="{Binding PortConfig.SelectedDataBit}" Margin="0,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">校验位：</TextBlock>
        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding PortConfig.ParityNames}" SelectedItem="{Binding PortConfig.SelectedParityName}" Margin="0,5"/>

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">停止位：</TextBlock>
        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding PortConfig.StopBitValues}" SelectedItem="{Binding PortConfig.SelectedStopBit}" Margin="0,5"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button x:Name="BtnRefreshPort" Width="80" Height="35" Content="刷新串口" Click="BtnRefreshPort_Click"/>
            <Button x:Name="BtnOpenPort" Width="80" Height="35" Content="打开串口" Background="#107C10" Foreground="White" Click="BtnOpenPort_Click"/>
            <Button x:Name="BtnClosePort" Width="80" Height="35" Content="关闭串口" Background="#E64A19" Foreground="White" Click="BtnClosePort_Click"/>
            <Button x:Name="BtnCancel" Width="80" Height="35" Content="取消" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
