<Page x:Class="ocean.Views.DbcViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ocean.Views"
      xmlns:viewmodels="clr-namespace:ocean.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DBC解析视图">

    <!-- 整体布局：左侧按钮区  + 右侧DBC展示区 -->
    <!-- 页面绑定ViewModel -->
    <Page.DataContext>
        <viewmodels:DbcViewModel/>
    </Page.DataContext>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧：加载DBC文件按钮 + 状态展示（绑定ViewModel属性） -->
        <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="5" Margin="0,0,5,0">
            <StackPanel VerticalAlignment="Top" Margin="10">
                <Button x:Name="BtnLoadDbc" Content="加载DBC文件" Width="160" Height="40" 
                        FontSize="14" Background="#007ACC" Foreground="White"
                        Click="BtnLoadDbc_Click"/>
                <TextBlock Margin="0,20,0,0" FontSize="12" Foreground="#333" Text="{Binding DbcLoadState}"/>
                <TextBlock Margin="0,10,0,0" FontSize="12" Foreground="#333" Text="{Binding FrameCountInfo}"/>
            </StackPanel>
        </Border>

        <!-- 右侧：DBC解析视图（绑定ViewModel的帧列表） -->
        <Border Grid.Column="1" Background="White" CornerRadius="5" BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding DbcFrameList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander IsExpanded="True" Margin="0,5,0,0" FontSize="13" FontWeight="Bold">
                                <Expander.Header>
                                    <MultiBinding StringFormat="{}{0} (十进制ID={1} | 十六进制ID=0x{1:X} | 长度={2}Byte)">
                                        <Binding Path="FrameName"/>
                                        <Binding Path="FrameId"/>
                                        <Binding Path="DataLength"/>
                                    </MultiBinding>
                                </Expander.Header>
                                <DataGrid ItemsSource="{Binding Signals}" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="30" FontSize="12" Margin="0,5,0,0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="信号名称" Binding="{Binding SignalName}" Width="180"/>
                                        <DataGridTextColumn Header="原始值" Binding="{Binding RawValue}" Width="100"/>
                                        <DataGridTextColumn Header="物理值" Binding="{Binding PhysicalValue}" Width="120"/>
                                        <DataGridTextColumn Header="单位" Binding="{Binding Unit}" Width="80"/>
                                        <DataGridTextColumn Header="更新时间" Binding="{Binding UpdateTime}" Width="150"/>
                                        <DataGridTextColumn Header="起始位" Binding="{Binding StartBit}" Width="80"/>
                                        <DataGridTextColumn Header="位长" Binding="{Binding BitLength}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
