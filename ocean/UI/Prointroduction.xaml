<Page x:Class="ocean.UI.Prointroduction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ocean.UI" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Prointroduction">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Text="协议介绍"
                FontSize="30" 
                TextAlignment="Center"
                VerticalAlignment="Center"/>

        <TextBlock 
                HorizontalAlignment="Left" 
                Grid.Row="1"
                Text="协议类型"
                FontSize="10" 
                Margin="10,0,0,0"
                TextAlignment="Center"
                VerticalAlignment="Center"/>

        <ComboBox
                Name="cPro" 
                FontSize="10" 
                Grid.Row="1" 
                Margin="60,20,0,20" 
                ItemsSource="{Binding ModbusSet.ProOptions}"
                SelectedItem="{Binding ModbusSet.IntoSelectedOption, Mode=TwoWay}"/>


        <!-- 用ItemsControl展示协议集合，通过DataTemplate定义每个协议的展示样式 -->
        <ItemsControl 
            Grid.Column="1" 
            Grid.Row="1"
            Grid.RowSpan="4"
            ItemsSource="{Binding ModbusSet.ProtocolList}"
            Margin="5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 5 0 5">
                        <!-- 协议名称 -->
                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" />
                        <!-- 报文结构 -->
                        <TextBlock Text="报文结构：" FontSize="12" Foreground="#666" />
                        <TextBlock Text="{Binding FrameStructure}" FontSize="12" Margin="10 0 0 0" />
                        <!-- 传输方式 -->
                        <TextBlock Text="传输方式：" FontSize="12" Foreground="#666" Margin="0 2 0 0" />
                        <TextBlock Text="{Binding Transport}" FontSize="12" Margin="10 0 0 0" />
                        <!-- 特点 -->
                        <TextBlock Text="协议特点：" FontSize="12" Foreground="#666" Margin="0 2 0 0" />
                        <TextBlock Text="{Binding Features}" FontSize="12" Margin="10 0 0 0" />
                        <!-- 分隔线 -->
                        <Separator Margin="0 5 0 5" Background="#EEE" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


    </Grid>
    
    
    
</Page>
