<Page x:Class="ocean.UI.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ocean.UI" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Click="Button_Click" Command="{Binding Uvm.ButtonIncrease}" ></Button>

        <TextBox Name="ty" Text="{Binding Uvm.ChangeTextBox.Text,Mode=TwoWay}" Margin="5"  FontSize="12" Grid.Column="1"></TextBox>
        <TextBox Name="ty3" Text="{Binding Uvm.ChangeTextBox3.Text,Mode=TwoWay}" Margin="5"  FontSize="12" Grid.Column="0" Grid.Row="1" ></TextBox>
        <TextBox Name="ty2" Text="{Binding Uvm.ChangeTextBox2.Text,Mode=TwoWay}" Margin="5"  FontSize="12" Grid.Column="1" Grid.Row="1"></TextBox>


    </Grid>
    
    
    
</Page>
